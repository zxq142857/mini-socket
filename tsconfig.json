{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,

    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,

    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
  },
  "include": ["src"]
}